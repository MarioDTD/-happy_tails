<div class="card">
  <%= link_to pet_path(pet) do %>
    <%= cl_image_tag pet.photos.first.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title text-center"><%= link_to pet.name, pet_path(pet), class: "pet-title"%>
    <% if !current_user.nil? %>
      <% if (current_user.like_ids & pet.like_ids).any? %>
        <%= link_to icon("fas","heart"), pet_like_path(pet, Like.find_by_pet_id(pet)), method: :delete,  class: "ml-2 heart-icon" %>
      <% else %>
        <%= link_to icon("far","heart"), pet_likes_path(pet.id), method: :post, class: "ml-2 heart-icon" %>
      <% end %>
    <% end %>
  </h5>
    <p class="card-text text-center"><%= pet.breed %><br>$<%= pet.fee %></p>
    <p class="card-text text-center"><%= pet.gender %></p>
    <p class="card-text text-center"><%= pet.age %> years old</p>
  </div>
</div>
